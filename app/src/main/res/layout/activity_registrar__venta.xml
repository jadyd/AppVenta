<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar_Venta">

    <RelativeLayout
        android:layout_width="396dp"
        android:layout_height="589dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp">

        <Spinner
            android:id="@+id/sprProducto"
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sprCliente"
            android:layout_marginStart="9dp"
            android:layout_marginTop="200dp" />

        <EditText
            android:id="@+id/txtIdVenta"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sprCliente"
            android:layout_marginStart="-151dp"
            android:layout_marginTop="20dp"
            android:height="Agregar ID Venta"
            android:ems="10"
            android:hint="Id"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txvPrecioProducto"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txvIdProducto"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="51dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-82dp"
            android:layout_marginTop="339dp"
            android:layout_toEndOf="@+id/txtIdVenta"
            android:text="Precio: $" />

        <TextView
            android:id="@+id/txvNombreProducto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txvIdProducto"
            android:layout_marginStart="124dp"
            android:layout_marginTop="23dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="311dp"
            android:text="Nombre:" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="81dp"
            android:text="Rut:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="287dp"
            android:text="Id:" />

        <TextView
            android:id="@+id/TextView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="110dp"
            android:text="Nombre:" />

        <TextView
            android:id="@+id/txvIdProducto"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="123dp"
            android:layout_marginTop="288dp" />

        <Spinner
            android:id="@+id/sprCliente"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/txvIdProducto" />

        <Button
            android:id="@+id/btnAgregarProducto"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtIdVenta"
            android:layout_alignEnd="@+id/txvPrecioProducto"
            android:layout_marginBottom="-184dp"
            android:layout_marginEnd="139dp"
            android:text="Agregar Producto" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="271dp"
            android:layout_marginTop="141dp"
            android:text="Apellido:" />

        <TextView
            android:id="@+id/txvRutCliente"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="133dp"
            android:layout_marginTop="81dp" />

        <TextView
            android:id="@+id/txvNombreCliente"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="110dp" />

        <TextView
            android:id="@+id/txvApellidoCliente"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="141dp" />

        <ListView
            android:layout_width="229dp"
            android:layout_height="185dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="0dp" />

        <Button
            android:id="@+id/btnGuardarVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="82dp"
            android:layout_marginEnd="30dp"
            android:text="Gurdar Venta" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>